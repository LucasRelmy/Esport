@page
@model Esport.Pages.Competitions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>Competition</h4>
<hr />

<div class="form-group">
    @if (Model.nbEquipe > 0)
    {
        for (int i = 0; i < Model.nbEquipe; i++)
        {
            <h4>
                Veuillez choisir les équipes<br />
            </h4>

            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <select asp-for="Equipes" class="form-control" asp-items="ViewBag.ListeEquipe"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        }
    }
    @if (Model.competitionBuilderNum != 0)
    {

        if (Model.competitionBuilderNum == 1)
        {
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="nbEquipe" class="control-label"></label>
                    <input asp-for="nbEquipe" class="form-control" />
                    <span asp-validation-for="nbEquipe" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            <a asp-page="./Index">Retour</a>

        }
        else
        {
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="nbEquipe" class="control-label"></label>
                    <input asp-for="nbEquipe" class="form-control" />
                    <span asp-validation-for="nbEquipe" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            <a asp-page="./Index">Retour</a>
        }




    }
    else

    {
        if (Model.nbEquipe == 0)
        {
            <h4>
                Veuillez choisir le type de compétition.<br />
            </h4>

            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <select asp-for="competitionBuilderNum" class="form-control" asp-items="ViewBag.SelectTypeCompetition"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        }

    }

</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
